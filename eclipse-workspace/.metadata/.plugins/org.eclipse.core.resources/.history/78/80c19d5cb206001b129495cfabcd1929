package rectangle;

class Rectangle {
	double w, h;
	
	Rectangle(double width, double height){
		if (width < 0) {
			System.out.println("Width Invalid.");
			this.w = -1 * width;
		} else 
			this.w = width;
		
		if (height < 0) {
			System.out.println("Height Invalid.");
			this.h = -1 * height;
		} else 
			this.h = height; 
	}
	
	void display() {
		for (int i = 0; i < this.h; ++i) {
			for (int j = 0; j < this.w; ++j)
				System.out.println('*');
			System.out.println('\n');
		}
		System.out.println('\n');
	}
	
	public class TestRectangle {
		public void main(String[] args) {
			TestRectangle rect_1 = new TestRectangle(10.0, 5.0);
			TestRectangle rect_2 = new TestRectangle(8.0, 10.0);
			TestRectangle rect_3 = new TestRectangle(3.0, 3.0);
			TestRectangle rect_4 = new TestRectangle(15.0, 11.0);
			TestRectangle rect_5 = new TestRectangle(50.0, 5.0);
			
			rect_1.display();
			rect_2.display();
			rect_3.display();
			rect_4.display();
			rect_5.display();
		}
	}
}
