package Ecommerce;

import java.util.Scanner;

class Item {
	int ID;
	String name;
	double price;
	
	Item(){}
	
	Item(int ID, String name, double price){
		this.ID = ID;
		this.name = name;
		this.price = price;
	}	
}

class Order {
	Item[] arr;
	
	Order(){
		this.arr = new Item[100];
	};
	
	int count = 0;
	
	public void addItem(Item x) {
		count++;
		this.arr[count - 1] = x;
	}
	
	double calculateAverageCost() {
		double ave_cost = 0.0;
		for (int i = 0; i < this.arr.length; ++i)
			ave_cost += this.arr[i].price;
		ave_cost /= this.arr.length;
		return ave_cost;
	}
}

public class TestECommerce {
	public static void main(String[] argc) {
		Scanner s = new Scanner(System.in);
		
		Order A = new Order();
		
		while (true) {
			System.out.print("New ? 1 or 0");
			int a = s.nextInt();
			if (a == 0) break;
			
			System.out.print("Input ID of Item: ");
			int ID = s.nextInt();
			System.out.print("Input Name of Item: ");
			String name = s.nextLine();
			System.out.print("Input Price of Item: ");
			double price = s.nextDouble();
			
			Item temp = new Item(ID, name, price);
			A.addItem(temp); 
		}
		
		System.out.println("Average of cost of order: ");
		System.out.println(A.calculateAverageCost());
		s.close();
	}
}
