package Ecommerce;

import java.util.Scanner;

class Item {
	int ID;
	String name;
	double price;
	
	Item(int ID, String name, double price){
		this.ID = ID;
		this.name = name;
		this.price = price;
	}	
}

class Order {
	Item[] arr;
	
	public void addArr(int n, Item x) {
		Item[] newArr = new Item[n + 1];
		
		for (int i = 0; i < n; ++i)
			newArr[i] = this.arr[i];
		newArr[n] = x;
		
		this.arr = newArr;
	}
	
	double calculateAverageCost() {
		double ave_cost = 0.0;
		for (int i = 0; i < this.arr.length; ++i)
			ave_cost += this.arr[i].price;
		ave_cost /= this.arr.length;
		return ave_cost;
	}
}

